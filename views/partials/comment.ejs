<% comments.forEach(comment => { %>
  <% if (comment && comment.by && comment.text) { %>
    <div class="comment mb-2" data-comment-id="<%= comment.id %>" style="margin-left: <%= level * 12 %>px;">
      <div class="border-l-2 border-gray-200 comment-header cursor-pointer dark:border-hn-border-dark pl-2 py-1" onclick="toggleComment('<%= comment.id %>')">
        <div class="select-none text-gray-500 text-xs">
          <span class="collapse-btn font-mono mr-1">[-]</span>
          <span class="font-medium"><%= comment.by %></span> | <%= new Date(comment.time * 1000).toLocaleString('en-AU') %>
        </div>
      </div>
      <div class="border-l-2 border-gray-200 comment-content dark:border-hn-border-dark pb-2 pl-2">
        <div class="comment-text leading-relaxed mb-2 text-black text-xs dark:text-gray-200">
          <%- comment.text %>
        </div>
        <% if (comment.children && comment.children.length > 0) { %>
          <div class="comment-children">
            <%- include('comment', { comments: comment.children, level: level + 1 }) %>
          </div>
        <% } %>
      </div>
    </div>
    
    <style>
      .comment.collapsed .comment-content {
        display: none;
      }
      .comment.collapsed .collapse-btn {
        color: #9ca3af;
      }
      .comment-text p {
        margin: 0 0 8px 0;
      }
      .comment-text a {
        color: inherit;
        text-decoration: underline;
      }
      .comment-text code {
        background-color: #f3f4f6;
        padding: 2px 4px;
        border-radius: 3px;
        font-family: "Courier New", monospace;
        font-size: 11px;
      }
      .dark .comment-text code {
        background-color: #374151;
      }
      .comment-text pre {
        background-color: #f3f4f6;
        padding: 10px;
        border-radius: 3px;
        overflow-x: auto;
        margin: 8px 0;
      }
      .dark .comment-text pre {
        background-color: #374151;
      }
    </style>
  <% } %>
<% }); %>

