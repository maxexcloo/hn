<!DOCTYPE html>
<html>
  <head>
    <title><%= story.title %> | HN</title>
    <link rel="stylesheet" href="/output.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      .comment.collapsed .comment-content {
        display: none;
      }
      .comment.collapsed .comment-children {
        display: none;
      }
      .comment-text p {
        margin: 0 0 8px 0;
      }
      .comment-text a {
        color: inherit;
        text-decoration: underline;
      }
      .comment-text code {
        background-color: #f3f4f6;
        padding: 2px 4px;
        border-radius: 3px;
        font-family: "Courier New", monospace;
        font-size: 11px;
      }
      .dark .comment-text code {
        background-color: #374151;
      }
      .comment-text pre {
        background-color: #f3f4f6;
        padding: 10px;
        border-radius: 3px;
        overflow-x: auto;
        margin: 8px 0;
      }
      .dark .comment-text pre {
        background-color: #374151;
      }
    </style>
  </head>
  <body class="bg-hn-bg dark:bg-hn-bg-dark font-verdana text-black text-xs dark:text-hn-text-dark">
    <div class="max-w-4xl mx-auto p-4">
      <div class="mb-4">
        <div class="font-bold mb-2 text-lg">
          <a class="no-underline text-hn-orange" href="/">HN</a>
        </div>
      </div>
      
      <div class="border-b border-gray-300 dark:border-hn-border-dark mb-6 pb-3">
        <div class="font-normal mb-2 text-sm"><%= story.title %></div>
        <div class="text-gray-500 text-xs">
          <%= story.score %> points by <%= story.by %> | 
          <%= story.descendants || 0 %> comments
          <% if (story.url) { %>
            | <a class="text-gray-500 underline" href="<%= story.url %>">link</a>
          <% } %>
        </div>
      </div>
      
      <% if (comments.length === 0) { %>
        <p class="italic text-gray-500 text-xs">No comments yet.</p>
      <% } else { %>
        <%- include('partials/comment', { comments: comments, level: 0 }) %>
      <% } %>
    </div>
    
    <script>
      // Comment collapsing functionality
      function toggleComment(commentId) {
        const comment = document.querySelector(`[data-comment-id="${commentId}"]`);
        const collapseBtn = comment.querySelector('.collapse-btn');
        
        if (comment.classList.contains('collapsed')) {
          comment.classList.remove('collapsed');
          collapseBtn.textContent = '[-]';
        } else {
          comment.classList.add('collapsed');
          collapseBtn.textContent = '[+]';
        }
      }
    </script>
  </body>
</html>
