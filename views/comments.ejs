<!DOCTYPE html>
<html>
  <head>
    <title><%= story.title %> | HN</title>
    <link rel="stylesheet" href="/output.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="bg-white dark:bg-black font-verdana text-black text-xs dark:text-gray-200">
    <div class="max-w-4xl mx-auto p-4">
      <div class="mb-4">
        <div class="font-bold mb-2 text-lg">
          <a class="no-underline text-black dark:text-gray-200" href="/">HN</a>
        </div>
      </div>
      
      <div class="border-b border-gray-300 dark:border-gray-600 mb-6 pb-3">
        <div class="font-normal mb-2 text-sm"><%= story.title %></div>
        <div class="text-gray-500 text-xs">
          <%= story.score %> points by <%= story.by %> | 
          <%= story.descendants || 0 %> comments
          <% if (story.url) { %>
            | <a class="text-gray-500 underline" href="<%= story.url %>">link</a>
          <% } %>
        </div>
      </div>
      
      <% if (comments.length === 0) { %>
        <p class="italic text-gray-500 text-xs">No comments yet.</p>
      <% } else { %>
        <%- include('partials/comment', { comments: comments, level: 0 }) %>
      <% } %>
    </div>
    
    <script>
      // Comment collapsing functionality
      function toggleComment(commentId) {
        const comment = document.querySelector(`[data-comment-id="${commentId}"]`);
        const collapseBtn = comment.querySelector('.collapse-btn');
        
        if (comment.classList.contains('collapsed')) {
          comment.classList.remove('collapsed');
          collapseBtn.textContent = '[-]';
        } else {
          comment.classList.add('collapsed');
          collapseBtn.textContent = '[+]';
        }
      }
    </script>
  </body>
</html>
